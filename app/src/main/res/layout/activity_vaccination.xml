<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:background="#fff"
    tools:context="com.amarnehsoft.vaccinations.activities.ChildActivity">



        <ImageView
            android:layout_width="match_parent"
            android:src="@drawable/vaccination2"
            android:layout_height="100dp" />

        <TextView
            android:id="@+id/txtVaccinationName"
            android:textSize="17sp"
            android:textColor="#1c6b8c"
            android:text="the name of vaccination here"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:textColor="#000"
                android:layout_width="wrap_content"
                android:text="@string/forAge"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/txtAge"
                android:textColor="@color/brown"
                android:textSize="17sp"
                android:textStyle="bold"
                android:layout_marginStart="3dp"
                android:text="0 days"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <TextView

            android:textColor="@color/black"
            android:id="@+id/txtDesc"
            android:layout_marginTop="5dp"
            android:textAlignment="textStart"
            android:text="hello here there should be a too long description about the vaccination ... etc ...etc ... it is really a good vaccination, thank you"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />



        <LinearLayout
            android:layout_marginTop="5dp"
            android:gravity="center_vertical"
            android:padding="5dp"
            android:background="@drawable/border_flat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="100dp"
                android:src="@drawable/baby"
                android:layout_height="100dp" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="4"
                android:orientation="vertical"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:text="@string/yourChild"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:layout_marginStart="10dp"
                        android:textSize="15sp"
                        android:id="@+id/txtChildName"
                        android:text="Mohammad"
                        android:textColor="@color/colorPrimary"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:text="@string/haveToTakeThisVaccinationAfter"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/txtRemainingTime"
                        android:textColor="@color/pink"
                        android:text="0 days"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>

                <TextView
                    android:id="@+id/txtDate"
                    android:textStyle="italic"
                    android:textColor="@color/blue"
                    android:text="wed, 12-12-2002"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>
        </LinearLayout>

        <View
            android:visibility="gone"
            android:layout_margin="10dp"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/colorPrimary"/>

        <LinearLayout
            android:padding="5dp"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:src="@drawable/ic_date_range_black_24dp"
                    android:tint="@color/blue"
                    android:layout_width="24dp"
                    android:layout_height="wrap_content" />


                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:text="@string/notificationDate"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/txtDate2"
                        android:textColor="@color/blue"
                        android:textStyle="italic"
                        android:text="wed, 12-12-2012"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>






            </LinearLayout>

            <LinearLayout
                android:layout_gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:text="@string/after"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/txtRemainingTime2"
                    android:textColor="@color/pink"
                    android:text="0 days"
                    android:layout_marginStart="3dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <Button
                android:id="@+id/btnChange"
                android:text="@string/changeNotificationDate"
                android:background="@drawable/btn"
                android:textColor="#fff"
                android:textAllCaps="false"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>



</LinearLayout>
